<%= javascript_include_tag "//www.google.com/jsapi" %>
<%= javascript_include_tag "application", "chartkick" %>

<h2>GA WDI <%=@event.name %> Lesson Feedback</h2>

<button type="button" class="graph-button line">Line Graph</button>
<button type="button" class="graph-button pie">Pie Graph</button>
<button type="button" class="graph-button column">Column Graph</button>
<button type="button" class="graph-button bar">Bar Graph</button>

<div class="box">
    <h3 class="graph-title">Comfort</h3>
    <div class="graph line">
      <%= line_chart @responses.group(:comfort_score).count %>
    </div>
    <div class="graph pie">
      <%= pie_chart @responses.group(:comfort_score).count %>
    </div>
    <div class="graph column">
      <%= column_chart @responses.group(:comfort_score).count %>
    </div>
    <div class="graph bar">
      <%= bar_chart @responses.group(:comfort_score).count %>
    </div>
</div>

<div class="box">
    <h3 class="graph-title">Completeness</h3>
    <div class="graph line">
      <%= line_chart @responses.group(:completeness_score).count %>
    </div>
    <div class="graph pie">
      <%= pie_chart @responses.group(:completeness_score).count %>
    </div>
    <div class="graph column">
      <%= column_chart @responses.group(:completeness_score).count %>
    </div>
    <div class="graph bar">
      <%= bar_chart @responses.group(:completeness_score).count %>
    </div>
</div>


<button id="showComments"><h4>Student Comments</h4></button>
<div class="comments-list">
     <% @event.responses.each do |response| %>

    <div class="comment name-box">
        <% if response.name == "" %>
            Anonymous:
        <% else %>
            <%= response.name %>:

        <% end %>
        <%= response.comment %>
    </div>

    <% end %>
</div>
<script>
$(".graph").hide();

</script>
